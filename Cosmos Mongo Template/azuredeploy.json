{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "cosmosCollectionsArray": {
            "type": "array",
            "defaultValue" : [
                {
                    "name": "apprenticeships",
                    "throughput": 400
                },
                {
                    "name": "traineeships",
                    "throughput": 400
                },
                {
                    "name": "auditItems",
                    "throughput": 400
                }
            ]
        },
        "cosmosCollectionIndexesArray": {
            "type": "array",
            "defaultValue" : [
                {
                    "name": "apprenticeships",
                    "indexes": [
                        {
                            "key": { "keys":["Vacancy._id", "CandidateId"] },
                            "options": { "unique": "true" }
                        },
                        {
                            "key": { "keys": ["Vacancy._id"] }
                        },
                        {
                            "key": { "keys": ["CandidateId"] }
                        }
                    ]
                },
                {
                    "name": "traineeships",
                    "indexes": [
                        {
                            "key": { "keys":["Vacancy._id", "CandidateId"] },
                            "name" : "Vacancy._id_1_CandidateId_1",
                            "options": { "unique": "true" }
                        },
                        {
                            "key": { "keys": ["Vacancy._id"] }
                        },
                        {
                            "key": { "keys": ["CandidateId"] }
                        }
                    ]
                },
                {
                    "name": "auditItems",
                    "indexes": []
                }
            ]
        }
    },
    "variables": {
        "accountName": "azure-template-rg-cdb",
        "databaseName": "employees",
        "collections": [
            {
                "name": "personalData", 
                "throughput": 400, 
                "indexes": [
                    {
                        "key": { "keys":["company_id", "company_address"] },
                        "options": { "unique": "true" }
                    }
                ] 
            },
            {
                "name": "department", 
                "throughput": 400,
                "indexes": [
                    {
                        "key": { "keys": [ "name" ]}
                    }
                ]
            },
            {
                "name": "ranks", 
                "throughput": 400,
                "indexes": []
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "name": "[variables('accountName')]",
            "apiVersion": "2019-08-01",
            "location": "[parameters('location')]",
            "kind": "MongoDB",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "locationName": "eastus",
                        "failoverPriority": 0,
                        "isZoneRedundant": false
                    }, 
                    {
                        "locationName": "westus",
                        "failoverPriority": 1,
                        "isZoneRedundant": false
                    }
                ]
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases",
            "name": "[concat(variables('accountName'), '/', variables('databaseName'))]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/', variables('accountName'))]" ],
            "properties":{
                "resource":{
                    "id": "[variables('databaseName')]"
                }
            }
        },
        {
            "type": "Microsoft.DocumentDb/databaseAccounts/mongodbDatabases/collections",
            "name": "[concat(variables('accountName'), '/', variables('databaseName'), '/', variables('collections')[copyIndex()].name)]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/mongodbDatabases', variables('accountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource":{
                    "id":  "[variables('collections')[copyIndex()].name]",
                    "indexes": "[variables('collections')[copyIndex()].indexes]"
                },
                "options": { "throughput": "[variables('collections')[copyIndex()].throughput]" }
            },
            "copy":{
                "name":"collectionsCopy",
                "count": "[length(variables('collections'))]"
            }
        },
        {
            "type": "Microsoft.DocumentDb/databaseAccounts/mongodbDatabases/collections",
            "name": "[concat(variables('accountName'), '/', variables('databaseName'), '/companies')]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/mongodbDatabases', variables('accountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource":{
                    "id":  "companies",
                    "indexes": [
                        {
                            "key": { "keys":["user_id", "user_address"] },
                            "options": { "unique": "true" }
                        },
                        {
                            "key": { "keys":["_ts"] },
                            "options": { "expireAfterSeconds": "2629746" }
                        }
                    ]
                },
                "options": { "throughput": "400" }
            }
        },
        {
            "type": "Microsoft.DocumentDb/databaseAccounts/mongodbDatabases/collections",
            "name": "[concat(variables('accountName'), '/', variables('databaseName'), '/', parameters('cosmosCollectionsArray')[copyIndex()].name)]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/mongodbDatabases', variables('accountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource":{
                    "id":  "[parameters('cosmosCollectionsArray')[copyIndex()].name]",
                    "indexes": "[parameters('cosmosCollectionIndexesArray')[copyIndex()].indexes]"
                },
                "options": { "throughput": "[parameters('cosmosCollectionsArray')[copyIndex()].throughput]" }
            },
            "copy":{
                "name":"collectionsCopy",
                "count": "[length(parameters('cosmosCollectionsArray'))]"
            }
        }
    ]
}