{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "cosmosCollectionsArray": {
            "type": "array",
            "defaultValue" : [
                {
                    "name": "apprenticeships",
                    "shardKey": { "CandidateId": "Hash" },
                    "throughput": 400
                },
                {
                    "name": "candidates",
                    "shardKey": {},
                    "throughput": 400
                },
                {
                    "name": "savedsearches",
                    "shardKey": {},
                    "throughput": 400
                },
                {
                    "name": "users",
                    "shardKey": {},
                    "throughput": 400
                }
            ]
        },
        "cosmosCollectionIndexesArray": {
            "type": "array",
            "defaultValue" : [
                {
                    "name": "apprenticeships",
                    "indexes": [
                        {
                            "key": { "keys":["Vacancy._id", "CandidateId"] },
                            "options": { "unique": "true" }
                        },
                        {
                            "key": { "keys": ["Vacancy._id"] }
                        },
                        {
                            "key": { "keys": ["CandidateId"] }
                        }
                    ]
                },
                {
                    "name": "candidates",
                    "indexes": [
                        {
                            "key": { "keys": ["SubscriberId"] }
                        },
                        {
                            "key": { "keys": ["CommunicationPreferences.VerifiedMobile"] }
                        },
                        {
                            "key": { "keys": ["CommunicationPreferences.MobileVerificationCode"] }
                        },
                        {
                            "key": { "keys": ["RegistrationDetails.PhoneNumber"] }
                        },
                        {
                            "key": { "keys": ["CommunicationPreferences.AllowTraineeshipPrompts"] }
                        },
                        {
                            "key": { "keys": ["LegacyCandidateId"] }
                        },
                        {
                            "key": { "keys": ["RegistrationDetails.EmailAddress"] }
                        },
                        {
                            "key": { "keys": ["DateCreated"] }
                        },
                        {
                            "key": { "keys": ["DateUpdated"] }
                        },
                        {
                            "key": { "keys": ["RegistrationDetails.FirstName"] }
                        },
                        {
                            "key": { "keys": ["RegistrationDetails.LastName"] }
                        },
                        {
                            "key": { "keys": ["RegistrationDetails.DateOfBirth"] }
                        },
                        {
                            "key": { "keys": ["RegistrationDetails.Address.Postcode"] }
                        }
                    ]
                },
                {
                    "name": "savedsearches",
                    "indexes": []
                },
                {
                    "name": "users",
                    "indexes": [
                        {
                            "key": { "keys":["Username", "Status"] },
                            "options": { "unique": "true" }
                        },
                        {
                            "key": { "keys": ["Username"] }
                        },
                        {
                            "key": { "keys": ["Status"] }
                        }
                    ]
                }
            ]
        }
    },
    "variables": {
        "accountName": "azure-template-rg-cdb",
        "databaseName": "employees",
        "collections": [
            {
                "name": "personalData", 
                "throughput": 400, 
                "indexes": [
                    {
                        "key": { "keys":["company_id", "company_address"] },
                        "options": { "unique": "true" }
                    }
                ] 
            },
            {
                "name": "department", 
                "throughput": 400,
                "indexes": [
                    {
                        "key": { "keys": [ "name" ]}
                    }
                ]
            },
            {
                "name": "ranks", 
                "throughput": 400,
                "indexes": []
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "name": "[variables('accountName')]",
            "apiVersion": "2019-08-01",
            "location": "[parameters('location')]",
            "kind": "MongoDB",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "locationName": "eastus",
                        "failoverPriority": 0,
                        "isZoneRedundant": false
                    }, 
                    {
                        "locationName": "westus",
                        "failoverPriority": 1,
                        "isZoneRedundant": false
                    }
                ]
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/mongodbDatabases",
            "name": "[concat(variables('accountName'), '/', variables('databaseName'))]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/', variables('accountName'))]" ],
            "properties":{
                "resource":{
                    "id": "[variables('databaseName')]"
                }
            }
        },
        {
            "type": "Microsoft.DocumentDb/databaseAccounts/mongodbDatabases/collections",
            "name": "[concat(variables('accountName'), '/', variables('databaseName'), '/', parameters('cosmosCollectionsArray')[copyIndex()].name)]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/mongodbDatabases', variables('accountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource":{
                    "id":  "[parameters('cosmosCollectionsArray')[copyIndex()].name]",
                    "shardKey": "[parameters('cosmosCollectionsArray')[copyIndex()].shardKey]",
                    "indexes": "[parameters('cosmosCollectionIndexesArray')[copyIndex()].indexes]"
                },
                "options": { "throughput": "[parameters('cosmosCollectionsArray')[copyIndex()].throughput]" }
            },
            "copy":{
                "name":"collectionsCopy",
                "count": "[length(parameters('cosmosCollectionsArray'))]"
            }
        }
    ]
}